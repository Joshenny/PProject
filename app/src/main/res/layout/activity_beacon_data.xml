            app:layout_constraintTop_toBottomOf="@+id/library" />

        <TextView
            android:id="@+id/m"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/iv_s2"
            android:layout_marginEnd="8dp"
            android:layout_toRightOf="@+id/iv_s1"
            android:text="管理學院"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_s1"
            app:layout_constraintTop_toBottomOf="@id/iv_m" />

        <ImageView
            android:id="@+id/iv_e"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teacher" />

        <TextView
            android:id="@+id/e"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/iv_s3"
            android:layout_marginStart="8dp"
            android:text="環境學院"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_e" />

        <ImageView
            android:id="@+id/iv_tpeople"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/m" />

        <TextView
            android:id="@+id/tpeople"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/iv_p1"
            android:layout_marginEnd="8dp"
            android:text="原民院"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_s1"
            app:layout_constraintTop_toBottomOf="@id/iv_tpeople" />

        <ImageView
            android:id="@+id/iv_hotel"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/e" />

        <TextView
            android:id="@+id/hotel"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:text="東華會館"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_hotel" />

        <ImageView
            android:id="@+id/iv_lake"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/e" />

        <TextView
            android:id="@+id/lake"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/iv_s2"
            android:layout_marginEnd="8dp"
            android:layout_toRightOf="@+id/iv_s1"
            android:text="湖畔餐聽"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_p3"
            app:layout_constraintTop_toBottomOf="@id/iv_lake" />

        <ImageView
            android:id="@+id/iv_d"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lake" />

        <TextView
            android:id="@+id/d"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/iv_s3"
            android:layout_marginStart="8dp"
            android:text="多容館"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_d" />

        <ImageView
            android:id="@+id/iv_ggi"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lake" />

        <TextView
            android:id="@+id/ggi"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/iv_p1"
            android:layout_marginEnd="8dp"
            android:text="集賢館"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_s1"
            app:layout_constraintTop_toBottomOf="@id/iv_ggi" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>